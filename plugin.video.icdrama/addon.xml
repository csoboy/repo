<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.icdrama" version="1.2.8" name="Icdrama" provider-name="csoboy">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
    <import addon="script.module.html5lib" version="0.999.0"/>
    <import addon="script.module.beautifulsoup4" version="4.3.2"/>
    <import addon="script.module.urlresolver" version="3.0.1"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="addon.py">
    <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary>Dramas, shows, and movies from icdrama.se</summary>
    <description>Provides contents from icdrama.se. Will be maintained as long as icdrama.se is</description>
    <disclaimer>This addon is not affiliated with icdrama.se</disclaimer>
    <platform>all</platform>
    <license>MIT License</license>
  </extension>
  <extension point="xbmc.addon.repository"
              name="private add-on repository">
    <info compressed="true">https://raw.githubusercontent.com/csoboy/repo/master/addons.xml</info>
    <checksum>https://raw.githubusercontent.com/csoboy/repo/master/addons.xml.md5</checksum>
    <datadir zip="true">https://raw.githubusercontent.com/csoboy/repo/master</datadir>
  </extension>
</addon>
